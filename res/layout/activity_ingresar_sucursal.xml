<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgregarSucursalActivity" >

    <TextView
        android:id="@+id/empresaConsultarGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="49dp"
        android:text="@string/ingresarSucursalLabel3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/empresaConsultarGas"
        android:layout_below="@+id/empresaConsultarGas"
        android:layout_marginTop="51dp"
        android:text="@string/ingresarSucursalLabel4"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idAgregarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/nombreAgregarSucursal"
        android:layout_alignRight="@+id/nombreAgregarSucursal"
        android:ems="10"
        android:hint="@string/idSucursal"
        android:maxLength="6"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/direccionAgregarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/telefonoAgregarSuc"
        android:layout_alignRight="@+id/nombreAgregarSucursal"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="56dp"
        android:layout_marginTop="59dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="@string/IngresarGasLabel2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonAgregarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoAgregarSuc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="agregarSucursal"
        android:text="@string/ingresarSucursalBoton1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/telefonoAgregarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/botonAgregarSucursal"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="8"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nombreAgregarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/telefonoAgregarSuc"
        android:ems="10"
        android:hint="@string/ingresarSucursalEdit1"
        android:maxLength="100"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:text="@string/ingresarSucursalLabel1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="52dp"
        android:text="@string/idGaso"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="47dp"
        android:text="@string/ingresarSucursalLabel2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idGasolineraAgregarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/nombreAgregarSucursal"
        android:ems="10"
        android:hint="@string/idGasolinera"
        android:maxLength="3"
        android:textSize="20sp" />

</RelativeLayout>