<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="ActualizarSucursal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModificarSucursalActivity" >

    <EditText
        android:id="@+id/nombreModificarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/idModificarSuc"
        android:ems="10"
        android:hint="@string/ingresarSucursalEdit1"
        android:maxLength="100"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/direccionModificarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/nombreModificarSuc"
        android:layout_alignRight="@+id/nombreModificarSuc"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/telefonoModificarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/empresaConsultarGas"
        android:layout_alignBottom="@+id/empresaConsultarGas"
        android:layout_alignLeft="@+id/direccionModificarSuc"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonModificarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoModificarSucursal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="ActualizarSucursal"
        android:text="@string/botonModificarSucursal"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idModificarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/botonModificarSucursal"
        android:layout_marginLeft="35dp"
        android:ems="10"
        android:hint="@string/idSucursal"
        android:maxLength="7"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/idGasolineraModificarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/idModificarSuc"
        android:ems="10"
        android:hint="@string/idGasolinera"
        android:maxLength="3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/idModificarSuc"
        android:layout_marginTop="124dp"
        android:text="@string/ingresarSucursalLabel2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nombreModificarSuc"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="30dp"
        android:text="@string/idGaso"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="48dp"
        android:text="@string/ingresarSucursalLabel3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/empresaConsultarGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="51dp"
        android:text="@string/ingresarSucursalLabel4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="22dp"
        android:layout_marginTop="78dp"
        android:layout_toLeftOf="@+id/idModificarSuc"
        android:text="@string/idSuc"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:text="@string/modificarSucursalLabel1"
        android:textSize="30sp" />

</RelativeLayout>