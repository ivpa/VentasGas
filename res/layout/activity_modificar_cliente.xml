<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModificarClienteActivity" >

    <TextView
        android:id="@+id/empresaConsultarGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="37dp"
        android:text="@string/nombr2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/primerNombreModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/empresaConsultarGas"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@+id/empresaConsultarGas"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/segundoNombreModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/empresaConsultarGas"
        android:layout_alignBottom="@+id/empresaConsultarGas"
        android:layout_alignLeft="@+id/primerNombreModificarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/direccionConsultarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/telefonoConsultarSuc"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="50dp"
        android:text="@string/appp2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/telefonoConsultarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/empresaConsultarGas"
        android:layout_below="@+id/segundoNombreModificarCliente"
        android:layout_marginTop="42dp"
        android:text="@string/nombr3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tercerNombreModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/segundoNombreModificarCliente"
        android:layout_alignTop="@+id/telefonoConsultarSuc"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/direccionConsultarSucursal"
        android:layout_below="@+id/tercerNombreModificarCliente"
        android:layout_marginTop="37dp"
        android:text="@string/appp1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="48dp"
        android:text="@string/nombr1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/primerApellidoModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tercerNombreModificarCliente"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/segundoApellidoModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/direccionConsultarSucursal"
        android:layout_alignBottom="@+id/direccionConsultarSucursal"
        android:layout_alignLeft="@+id/primerApellidoModificarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/segundoApellidoModificarCliente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:onClick="actualizarCliente"
        android:text="@string/modificar"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idModificarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/primerNombreModificarCliente"
        android:layout_alignRight="@+id/primerNombreModificarCliente"
        android:ems="10"
        android:hint="@string/IdCliente"
        android:maxLength="7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="45dp"
        android:layout_marginTop="67dp"
        android:layout_toLeftOf="@+id/botonModificarCliente"
        android:text="@string/idClientes"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:text="@string/modifcliente"
        android:textSize="30sp" />

</RelativeLayout>