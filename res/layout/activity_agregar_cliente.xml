<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgregarClienteActivity" >

    <TextView
        android:id="@+id/empresaConsultarGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tercerNombreAgregarCliente"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="40dp"
        android:text="@string/nom2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/telefonoConsultarSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="50dp"
        android:text="@string/appe1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/empresaConsultarGas"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="125dp"
        android:text="@string/nom3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="46dp"
        android:text="@string/nom1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/primerNombreAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/idAgregarCliente"
        android:layout_alignRight="@+id/tercerNombreAgregarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15" />

    <EditText
        android:id="@+id/segundoNombreAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/empresaConsultarGas"
        android:layout_alignLeft="@+id/primerNombreAgregarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/segundoApellidoAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/direccionConsultarSucursal"
        android:layout_alignLeft="@+id/primerApellidoAgregarCliente"
        android:layout_alignRight="@+id/primerApellidoAgregarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/direccionConsultarSucursal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/telefonoConsultarSuc"
        android:layout_below="@+id/telefonoConsultarSuc"
        android:layout_marginTop="46dp"
        android:text="@string/ape2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/botonAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/segundoApellidoAgregarCliente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="insertarCliente"
        android:text="@string/btningcliente"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tercerNombreAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/idAgregarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/primerApellidoAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/telefonoConsultarSuc"
        android:layout_alignLeft="@+id/tercerNombreAgregarCliente"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="28dp"
        android:layout_marginTop="58dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="@string/idclienteing"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/botonAgregarCliente"
        android:layout_marginLeft="22dp"
        android:ems="10"
        android:hint="@string/IdCliente"
        android:maxLength="7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:text="@string/agregarcliente"
        android:textSize="30sp" />

</RelativeLayout>